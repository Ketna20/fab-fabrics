{{ 'component-promotion.css' | asset_url | stylesheet_tag }}  

<style>
    .promotion-container-{{section.id}} {
        background-color: {{section.settings.bg_color}};
    }

    .promotion-container-{{section.id}} h2,
    .promotion-container-{{section.id}} div {
        color: {{section.settings.text_color}};
    }
</style>


<div class="page-width promotion-container promotion-container-{{section.id}}">
    <h2 class="h1">{{section.settings.promo_heading}}</h2>
    <h5>{{section.settings.promo_text}}</h5>
    <a class="button" href={{section.settings.button_link}}>
        {{section.settings.button_text}}
    </a>
</div>

{%  schema  %}  
 {
    "name": "Promotion",
    "settings": [
        {
            "type": "text",
            "id": "promo_heading",
            "label": "Heading",
            "default": "Enter your heading here"
        },
        {
            "type": "textarea",
            "id": "promo_text",
            "label": "Text",
            "default": "Enter Promo description here"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Label",
            "default": "Shop Now"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background Color",
            "default": "#F5F5F5"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text Color",
            "default": "#000000"
        }
    ],
    "presets": [
        {"name": "Promotion Section"}
    ]
}
{% endschema %}